{
  "name": "sendforiran",
  "version": "1.0.0",
  "description": "One-click email templates for Iranian diaspora advocacy",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "lint": "astro check && eslint src --ext .ts,.astro,.tsx",
    "lint:fix": "eslint src --ext .ts,.astro,.tsx --fix",
    "type-check": "astro check",
    "validate": "tsx scripts/validate.ts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "astro": "^5.0.0",
    "@astrojs/tailwind": "^5.1.0",
    "@astrojs/preact": "^3.5.0",
    "preact": "^10.19.0",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-plugin-astro": "^0.31.0",
    "prettier": "^3.2.0",
    "prettier-plugin-astro": "^0.13.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "zod": "^3.22.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "iran",
    "advocacy",
    "human-rights",
    "diaspora",
    "astro",
    "static-site"
