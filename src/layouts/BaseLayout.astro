---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getTranslations, isRTL as checkRTL, type SupportedLang } from '../lib/i18n';

interface Props {
  title: string;
  description?: string;
  lang?: SupportedLang;
  currentPath?: string;
}

const {
  title,
  description,
  lang = 'en',
  currentPath = Astro.url.pathname,
} = Astro.props;

const i18n = getTranslations(lang);
const isRTL = checkRTL(lang);
const fontClass = isRTL ? 'font-persian' : 'font-sans';
const metaDescription = description || i18n.meta.description;
const fullTitle = `${title} | ${i18n.meta.title}`;
const siteUrl = 'https://sendforiran.org';
---

<!doctype html>
<html lang={lang} dir={isRTL ? 'rtl' : 'ltr'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={metaDescription} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Social -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:url" content={`${siteUrl}${currentPath}`} />
    <meta property="og:image" content={`${siteUrl}/og-image.png`} />
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Privacy: No external requests -->
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline';" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={`${siteUrl}${currentPath}`} />

    <title>{fullTitle}</title>

    <!-- Preload fonts -->
    <link rel="preload" href="/fonts/inter-regular.woff2" as="font" type="font/woff2" crossorigin />
    {isRTL && <link rel="preload" href="/fonts/vazirmatn-regular.woff2" as="font" type="font/woff2" crossorigin />}
  </head>
  <body class={`bg-bg text-text min-h-screen flex flex-col ${fontClass}`}>
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:bg-primary focus:text-white focus:px-lg focus:py-md focus:rounded-sm focus:z-[100] focus:font-semibold focus:shadow-lg"
    >
      {i18n.accessibility.skipToContent}
    </a>

    <Header lang={lang} currentPath={currentPath} />

    <main id="main-content" role="main" class="container mx-auto px-md py-lg flex-1" tabindex="-1">
      <slot />
    </main>

    <Footer lang={lang} />

    <!-- Service Worker Registration -->
    <script is:inline>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', function() {
          navigator.serviceWorker.register('/sw.js', { scope: '/' })
            .then(function() { console.log('SW registered'); })
            .catch(function(e) { console.error('SW failed:', e); });
        });
      }
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>

