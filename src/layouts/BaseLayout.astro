---
interface Props {
  title: string;
  description?: string;
  lang?: 'en' | 'fa' | 'de' | 'fr';
}

const { 
  title, 
  description = 'One-click email templates for Iranian diaspora advocacy',
  lang = 'en' 
} = Astro.props;

const isRTL = lang === 'fa';
const fontClass = isRTL ? 'font-persian' : 'font-sans';
---

<!doctype html>
<html lang={lang} dir={isRTL ? 'rtl' : 'ltr'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Privacy: No external requests -->
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline';" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <title>{title} | SendForIran</title>
    
    <!-- Preload fonts for performance -->
    <link rel="preload" href="/fonts/inter-regular.woff2" as="font" type="font/woff2" crossorigin />
    {isRTL && (
      <link rel="preload" href="/fonts/vazirmatn-regular.woff2" as="font" type="font/woff2" crossorigin />
    )}
  </head>
  <body class={`bg-bg text-text min-h-screen ${fontClass}`}>
    <main class="container mx-auto px-md py-lg">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>

