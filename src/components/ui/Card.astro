---
export interface Props {
  variant?: 'default' | 'elevated' | 'bordered';
  href?: string;
  class?: string;
  padding?: 'sm' | 'md' | 'lg';
}

const { 
  variant = 'default', 
  href,
  class: className = '',
  padding = 'md',
} = Astro.props;

const baseClasses = 'block rounded-md transition-all duration-200';

const paddingClasses = {
  sm: 'p-sm',
  md: 'p-md',
  lg: 'p-lg',
};

const variantClasses = {
  default: 'bg-surface',
  elevated: 'bg-surface shadow-lg shadow-black/20',
  bordered: 'bg-surface border border-white/10',
};

const interactiveClasses = href 
  ? 'hover:bg-white/5 hover:scale-[1.02] hover:shadow-xl focus-visible:outline-2 focus-visible:outline-primary focus-visible:outline-offset-2' 
  : '';

const classes = `${baseClasses} ${paddingClasses[padding]} ${variantClasses[variant]} ${interactiveClasses} ${className}`.trim();
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <div class={classes}>
    <slot />
  </div>
)}

