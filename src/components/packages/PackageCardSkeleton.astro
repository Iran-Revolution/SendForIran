---
/**
 * PackageCardSkeleton - Loading skeleton for PackageCard
 * Matches the PackageCard layout for smooth loading transitions
 */
import Skeleton from '../ui/Skeleton.astro';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<article
  class:list={[
    'flex flex-col',
    'bg-surface/80 backdrop-blur-sm',
    'border border-white/10 rounded-lg overflow-hidden',
    'animate-pulse',
    className
  ]}
  aria-busy="true"
  aria-label="Loading package..."
>
  <div class="p-md flex flex-col flex-1">
    <!-- Header skeleton -->
    <div class="flex items-start justify-between gap-sm mb-sm">
      <div class="flex items-center gap-sm">
        <Skeleton variant="badge" width="32px" class="!h-8 !w-8" />
        <Skeleton variant="badge" width="60px" />
      </div>
      <Skeleton variant="badge" />
    </div>
    
    <!-- Title skeleton -->
    <Skeleton variant="title" width="80%" class="mb-xs" />
    
    <!-- Description skeleton (2 lines) -->
    <div class="space-y-2 mb-md flex-1">
      <Skeleton variant="text" width="100%" />
      <Skeleton variant="text" width="75%" />
    </div>
    
    <!-- Keywords skeleton -->
    <div class="flex gap-1 mb-md">
      <Skeleton variant="badge" width="50px" />
      <Skeleton variant="badge" width="60px" />
      <Skeleton variant="badge" width="45px" />
    </div>
    
    <!-- Footer skeleton -->
    <div class="flex items-center justify-between pt-sm border-t border-white/10">
      <Skeleton variant="text" width="100px" />
      <div class="flex gap-1">
        <Skeleton variant="badge" width="20px" class="!h-5 !w-5" />
        <Skeleton variant="badge" width="20px" class="!h-5 !w-5" />
      </div>
    </div>
  </div>
  
  <!-- Action buttons skeleton -->
  <div class="flex border-t border-white/10">
    <Skeleton variant="button" class="flex-1 !rounded-none !h-11" />
    <div class="w-px bg-white/10" />
    <Skeleton variant="button" class="flex-1 !rounded-none !h-11" />
  </div>
</article>

