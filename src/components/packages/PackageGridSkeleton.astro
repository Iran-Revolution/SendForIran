---
/**
 * PackageGridSkeleton - Loading skeleton grid for multiple packages
 * Displays 3-6 skeleton cards in a responsive grid
 */
import PackageCardSkeleton from './PackageCardSkeleton.astro';

interface Props {
  count?: number;
  class?: string;
}

const { count = 6, class: className = '' } = Astro.props;
---

<div
  class:list={[
    'grid gap-md grid-cols-1 sm:grid-cols-2 lg:grid-cols-3',
    className
  ]}
  aria-live="polite"
  aria-busy="true"
>
  {Array.from({ length: count }).map((_, i) => (
    <PackageCardSkeleton key={i} />
  ))}
</div>

